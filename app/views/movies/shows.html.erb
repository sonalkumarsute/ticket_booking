<div class="container">
  <p id="notice"><%= notice %></p>
  <h2>Add Show</h2>
  <div class="row" style="background: #80808047;padding: 10px;">
    <%= form_tag add_show_path, method: "POST", multipart: true, remote: true do%>
      <div class="form-group">
        <%= select_tag "movie_id", options_for_select(@movies.pluck(:title,:id)) ,:prompt => "--select Movie--", :class => 'form-control', required: true %>
        <!-- form.number_field :topic_id, id: :question_topic_id %> -->
      </div>
       <div class="form-group">
        <%= select_tag "venue_id", options_for_select(@venues.pluck(:name,:id)) ,:prompt => "--select Venue--", :class => 'form-control', required: true %>
        <!-- form.number_field :topic_id, id: :question_topic_id %> -->
      </div> 
      <div style="margin-top:10px;">     
        <div class="pull-right"><%=submit_tag "Add Show", class:"btn-sm btn-warning"%></div>    
      </div>   
    <%end%>
  </div>
</div>
